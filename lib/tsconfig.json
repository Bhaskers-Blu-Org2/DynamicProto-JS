{
    "compilerOptions": {
      "sourceMap": true,
      "inlineSources": true,
      "noImplicitAny": false,
      "module": "amd",
      "moduleResolution": "node",
      "target": "es3",
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "noEmitHelpers": true,
      "alwaysStrict": true,
      "declaration": true,
      //"declarationDir": "./types",
      "outFile": "./dist-esm/dynamicproto-js.js",
      "rootDir": "lib/src",
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "lib": [ "dom", "es2015" ]
    },
    "include": [
      "src/DynamicProto.ts"
    ],
    "exclude": [ "node_modules/" ]
  }